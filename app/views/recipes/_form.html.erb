<%= form_for([@recipe]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </p>

  <p>
    <%= f.label :steps %><br>
    <%= f.text_area :steps %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>
