<h1>Recipes#index</h1>

<%= link_to "Add Recipe", new_recipe_path %>

<h3>Recipes</h3>

<table>
  <tr>
  <th>Title</th>
  <th>Ingredients</th>
  <th>Steps</th>
</tr>
<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.title %></td>
    <td><%= recipe.author %></td>
    <td><%= recipe.description %></td>
    <td><%= recipe.URL %></td>
    <td><%= link_to 'Show', recipe_path(recipe) %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe_path(recipe),
          method: :delete,
          data: { confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>
